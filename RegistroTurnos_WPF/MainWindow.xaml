    </Window.Background>
    <Label Content="Sistema de Registro de Cambios de Turnos" HorizontalAlignment="Left" Margin="229,38,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" FontFamily="Sitka Small Semibold"/>
